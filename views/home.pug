extends /layouts/theme.pug

block content
  .hero-header
    h1 Look deep into nature, and then you will understand everything better
      small Albert Einstein
  .hero-cite #[i.fa.fa-camera-retro] Photo by #[a(href='https://www.instagram.com/jordanfmcqueen/', rel='nofollow', target='_blank') Jordan McQueen]

  .bg-faded.p-t-2
    main.container
      .row
        .col-md-9.m-b-1
          each post in posts
            .card
              .card-block
                h4.card-title
                  a(href='/post/' + post.slug)= post.title
                != markdown.render(post.body.substring(0, 400))
                a.card-link(href='/post/' + post.slug) Continue reading
        .col-md-3
          .media
            .media-left
              img.media-object.img-circle(src='https://gravatar.com/avatar/?d=mm', width='40', height='40')
            .media-body
              h4.media-heading Author
              p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
